generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
  output        = "../../../node_modules/@generated/inventory-service"
}

generator docs {
  provider = "node node_modules/prisma-docs-generator"
  output        = "../../../node_modules/@generated/docs-inventory-service"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_INVENTORY")
}

model Inventory {
  id             Int      @id @default(autoincrement())
  productId      String   @map("product_id") 
  sku            String   @unique 
  
  stockQuantity  Int      @default(0) @map("stock_quantity") 
  reservedStock  Int      @default(0) @map("reserved_stock") 
  
  lastUpdated    DateTime @updatedAt @map("last_updated")

  @@map("inventories")
}

model InventoryTransaction {
  id          BigInt   @id @default(autoincrement())
  inventoryId Int      @map("inventory_id")
  type        TransType
  quantity    Int
  reason      String? 
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("inventory_transactions")
}

model Outbox {
  id          String   @id @default(uuid())
  topic       String   
  payload     Json     
  status      String   @default("PENDING") 
  retryCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@map("outbox")
}


enum TransType {
  INBOUND  // Nhập kho
  OUTBOUND // Xuất kho/Bán
  RESERVE  // Giữ hàng
  RELEASE  // Hủy giữ hàng (trả lại kho)
}